<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RibeiraBrava">

  <ImageView
      android:id="@+id/iv2"
      android:layout_width="383dp"
      android:layout_height="167dp"
      android:layout_gravity="center"
      android:layout_marginTop="5mm"
      android:layout_marginBottom="5mm"
      android:layout_weight="2"
      tools:srcCompat="@mipmap/ribeirabrava" />

  <TextView
      android:id="@+id/tv2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:text="Ribeira Brava"
      android:textAlignment="center"
      android:textSize="35sp"
      android:textStyle="bold"
      android:layout_marginBottom="8mm"
      android:layout_marginLeft="2mm"
      android:layout_marginRight="2mm"/>

  <Button
      android:id="@+id/b2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Ir para mindelo"
      android:onClick="irMindelo"
      android:layout_marginBottom="8mm"
      android:layout_marginLeft="2mm"
      android:layout_marginRight="2mm"/>

  <Button
      android:id="@+id/b3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:text="Mais Informações"
      android:onClick="maisRB"
      android:layout_marginBottom="8mm"
      android:layout_marginLeft="2mm"
      android:layout_marginRight="2mm"/>


</LinearLayout>